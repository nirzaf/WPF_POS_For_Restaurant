        mc:Ignorable="d"
        Background="gray"
        WindowStartupLocation="CenterOwner"
        Title="Dinner" Height="400" Width="750">
    <Grid TextBlock.TextAlignment="Left">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="508,25,4,19" RenderTransformOrigin="0.5,0.5">
            <ScrollViewer.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.083"/>
                    
                    <TranslateTransform/>
                </TransformGroup>
                
            </ScrollViewer.RenderTransform>
            <TextBlock  Name="Receipt" TextWrapping="WrapWithOverflow" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White"  Grid.ColumnSpan="2" />
        </ScrollViewer>
        <Button Name="Steak" Content="Steak" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Margin="21,153,0,0" Height="63" Click="Steak_Click"/>
